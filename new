#Requires AutoHotkey v2.0

; Define browser paths based on %APPDATA%
appData := A_AppData
browserPaths := Map(
    "Chrome", appData "\Local\Google\Chrome\User Data",
    "MSEdge", appData "\Local\Microsoft\Edge\User Data",
    "Opera", appData "\Opera Software\Opera Stable"
)

; Targeted sub-directory and file
targetFile := "Local State\Login Data"

; Loop through each browser
for browser, path in browserPaths {
    fullPath := path "\" targetFile
    if DirExist(path) {
        MsgBox "Found " browser " directory: " path
        if FileExist(fullPath)
            MsgBox "Login Data file found at: " fullPath
        else
            MsgBox "Login Data file not found in " browser
    } else {
        MsgBox "Directory not found for " browser
    }
}