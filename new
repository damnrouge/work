// test_dll.cpp
#include <windows.h>
#include <shellapi.h>

BOOL APIENTRY DllMain(HMODULE hModule, DWORD ul_reason_for_call, LPVOID lpReserved) {
    return TRUE;
}

// Function 1: Open Calculator
extern "C" __declspec(dllexport) void OpenCalculator() {
    ShellExecuteA(NULL, "open", "calc.exe", NULL, NULL, SW_SHOWNORMAL);
}

// Function 2: Open Command Prompt
extern "C" __declspec(dllexport) void OpenCommandPrompt() {
    ShellExecuteA(NULL, "open", "cmd.exe", NULL, NULL, SW_SHOWNORMAL);
}

// Function 3: Display MessageBox
extern "C" __declspec(dllexport) void ShowMessageBox() {
    MessageBoxA(NULL, "This is a test message from the DLL", "Test DLL", MB_OK | MB_ICONINFORMATION);
}

// Optional: Combined function that does all three
extern "C" __declspec(dllexport) void RunAllTests() {
    OpenCalculator();
    Sleep(1000);
    OpenCommandPrompt();
    Sleep(1000);
    ShowMessageBox();
}
